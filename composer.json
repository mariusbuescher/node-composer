{
    "name": "mariusbuescher/node-composer",
    "type": "composer-plugin",
    "description": "Installs composer nodejs or/and npm in vendor/",
    "license": "MIT",
    "keywords": [
        "node.js",
        "npm",
        "yarn",
        "frontend",
        "javascript"
    ],
    "homepage": "https://github.com/mariusbuescher/node-composer",
    "authors": [
        {
            "name": "Marius BÃ¼scher",
            "email": "marius.buescher@gmx.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "MariusBuescher\\NodeComposer\\": "src/"
        }
    },
    "require": {
        "php": ">=7.1",
        "composer/composer": "^1.4 || ^2.0",
        "composer-plugin-api": "^1.0 || ^2.0",
        "symfony/process": "^2.7 || >=3.0",
        "symfony/filesystem": ">=2.7"
    },
    "suggest": {
        "imponeer/composer-yarn-installer": "Lets use composer constraints for updating yarn package version",
        "imponeer/composer-nodejs-installer": "Lets use composer constraints for updating nodejs package version"
    },
    "extra": {
        "class": "MariusBuescher\\NodeComposer\\NodeComposerPlugin"
    }
}
